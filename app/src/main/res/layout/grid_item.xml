<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_mainlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#E8E5E5">

    <android.support.v7.widget.CardView
        android:id="@+id/item_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#E8E5E5"
        android:orientation="vertical"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/text_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="Baja Beacon Chesse Burger"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="sdfsdjfk kkasjkfkdsjfkj kjdskfjksdjkfj ksdfkjslkdjflkj dskajfkjdskjf" />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="$17.00"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <test.narendra.com.androidpracticaltest.ui.views.PinkDotView
                android:id="@+id/pink_dotview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                app:dot_color="#DF32A0"
                app:dot_count="10"
                app:dot_radius_with_space="12dp"
                app:dot_space="5dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/value_10_dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/button_menu_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="0.6"
            android:background="@drawable/blue_counter_button"
            android:gravity="center"

            android:padding="@dimen/value_10_dp"
            android:text="1000"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>